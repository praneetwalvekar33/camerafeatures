<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_select_image_from_gallary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Upload from Gallary"
        android:backgroundTint="@android:color/background_dark"
        android:textSize="18sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/button_select_image_from_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/button_select_image_from_gallary"
        android:text="Click Selfie"
        android:backgroundTint="@android:color/background_dark"
        android:textSize="18sp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/image_view_display"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/button_select_image_from_camera"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

</RelativeLayout>
